<%- include('../header') %>

<style>
    :root {
        --main-bg: #f4f7f6;
        --card-shadow: 0 10px 40px rgba(0,0,0,0.08);
        --primary: #3498db;
        --dark: #2d3436;
    }

    body {
        background-color: var(--main-bg);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .blog-wrapper {
        padding: 50px 0;
    }

    .blog-container {
        max-width: 1000px;
        margin: 0 auto;
        background: white;
        border-radius: 24px;
        box-shadow: var(--card-shadow);
        overflow: hidden;
        display: flex;
        flex-wrap: wrap;
    }
    
    .image-section {
        flex: 1;
        min-width: 450px;
        background: #fffdf9;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 30px;
        position: relative;
        border-right: 1px solid #eee;
    }

    .image-container {
        width: 100%;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border-radius: 12px;
        background: #f8f9fa;
    }

    .image-container.portrait img {
        object-fit: contain;
        background: white;
        padding: 10px;
    }

    .image-container.landscape img {
        object-fit: cover;
    }

    .author-image {
        width: 100%;
        height: 100%;
        transition: transform 0.3s ease;
    }

    .status-tag {
        position: absolute;
        top: 25px;
        right: 25px;
        padding: 6px 16px;
        border-radius: 30px;
        font-size: 13px;
        font-weight: 700;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .status-published { background: #e3f9e5; color: #1f8b24; }
    .status-draft { background: #fff4e5; color: #d48307; }

    .details-section {
        flex: 1;
        min-width: 450px;
        padding: 45px;
    }

    .blog-head h1 {
        font-size: 34px;
        font-weight: 800;
        margin-bottom: 25px;
    }

    .meta-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
        margin-bottom: 30px;
    }

    .meta-card {
        background: #fcfcfc;
        border: 1px solid #f0f0f0;
        padding: 15px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .content-box {
        background: #fbfbfb;
        padding: 25px;
        border-radius: 18px;
        border-left: 4px solid var(--primary);
        margin-bottom: 20px;
    }

    .btn-group {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
        margin-top: 30px;
    }

    .action-btn {
        padding: 12px;
        border-radius: 12px;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        display: flex;
        justify-content: center;
        gap: 8px;
        color: white;
    }

    .btn-edit { background: #ff9f43; }
    .btn-delete { background: #ff6b6b; }
    .btn-back { background: #54a0ff; }

    @media (max-width: 900px) {
        .image-section, .details-section {
            flex: 100%;
            min-width: 100%;
        }
    }
</style>

<div class="blog-wrapper">
    <div class="blog-container">

        <div class="image-section">
            <span class="status-tag <%= blog.status === 'Published' ? 'status-published' : 'status-draft' %>">
                <i class="fas fa-circle" style="font-size: 8px;"></i>
                <%= blog.status || 'Draft' %>
            </span>

            <div class="image-container">
                <% if (blog.authorImage) { %>
                    <img src="<%= blog.authorImage %>"
                         alt="<%= blog.name %>"
                         class="author-image">
                <% } else { %>
                    <div style="text-align:center;color:#aaa;">
                        <i class="fas fa-user-circle" style="font-size:120px;"></i>
                        <p>No image available</p>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="details-section">
            <div class="blog-head">
                <h1><%= blog.title || 'Untitled Blog' %></h1>
            </div>

            <div class="meta-grid">
                <div class="meta-card">
                    <i class="fas fa-user"></i>
                    <strong><%= blog.name || 'Unknown' %></strong>
                </div>
                <div class="meta-card">
                    <i class="fas fa-tag"></i>
                    <strong><%= blog.category || 'Uncategorized' %></strong>
                </div>
                <div class="meta-card">
                    <i class="fas fa-calendar"></i>
                    <strong><%= blog.date || 'Not set' %></strong>
                </div>
            </div>

            <div class="content-box">
                <p><%= blog.content || 'No content available.' %></p>
            </div>

            <div class="btn-group">
                <a href="/blog/edit-blog/<%= blog.id %>" class="action-btn btn-edit">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a href="/blog/delete-blog/<%= blog.id %>"
                   class="action-btn btn-delete"
                   onclick="return confirm('Are you sure?')">
                    <i class="fas fa-trash"></i> Delete
                </a>
                <a href="/blog/view-blog" class="action-btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>

    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<script>
document.addEventListener('DOMContentLoaded', function () {
    const img = document.querySelector('.author-image');
    if (!img) return;

    function setOrientation() {
        const container = img.parentElement;
        if (img.naturalWidth > img.naturalHeight) {
            container.classList.add('landscape');
        } else {
            container.classList.add('portrait');
        }
    }

    if (img.complete) {
        setOrientation();
    } else {
        img.addEventListener('load', setOrientation);
    }
});
</script>

<%- include('../footer') %>

