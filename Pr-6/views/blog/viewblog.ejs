<%- include('../header') %>

<style>
input[type="checkbox"] {
  all: revert !important;
  appearance: auto !important;
  -webkit-appearance: checkbox !important;
  opacity: 1 !important;
  position: static !important;
  visibility: visible !important;
  display: inline-block !important;
  width: auto !important;
  height: auto !important;
}

.page-breadcrumb {
  background: #f8f9fa;
  padding: 1rem 0;
  border-bottom: 1px solid #e9ecef;
}

.page-title {
  color: #2c3e50;
  font-weight: 600;
  margin-left: 20px;
}

.card {
  border-radius: 8px;
  border: 1px solid #e9ecef;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  overflow: hidden;
  height: 100%;
}

.card:hover {
  box-shadow: 0 5px 15px rgba(0,0,0,0.08);
  transform: translateY(-3px);
}

.card-img-top {
  height: 180px;
  object-fit: cover;
  border-bottom: 1px solid #e9ecef;
  width: 100%;
}

.card-body {
  padding: 1.25rem;
  display: flex;
  flex-direction: column;
}

.card-title {
  color: #2c3e50;
  font-weight: 600;
  font-size: 1.1rem;
  margin-bottom: 0.75rem;
  min-height: 42px;
  line-height: 1.3;
}

.card-text {
  color: #6c757d;
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
  line-height: 1.4;
}

.card-text strong {
  color: #495057;
}

.card-footer {
  background-color: #f8f9fa;
  border-top: 1px solid #e9ecef;
  padding: 0.75rem 1.25rem;
}

.card-footer .btn {
  margin: 2px;
  padding: 0.25rem 0.75rem;
  font-size: 0.85rem;
  border-radius: 4px;
}
 
.mb-4 {
  margin-bottom: 1.5rem !important;
}

.container-fluid {
  padding: 0 15px;
}

.badge {
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
  font-weight: 600;
}

.badge-success {
  background-color: #28a745;
  color: white;
}

.badge-warning {
  background-color: #ffc107;
  color: #212529;
}

.badge-info {
  background-color: #17a2b8;
  color: white;
}

.badge-secondary {
  background-color: #6c757d;
  color: white;
}

.description-text {
  font-size: 0.85rem;
  color: #495057;
  line-height: 1.5;
  margin-bottom: 0.5rem;
  background: #f8f9fa;
  padding: 8px;
  border-radius: 4px;
  border-left: 3px solid #17a2b8;
}

.content-preview {
  font-size: 0.85rem;
  color: #6c757d;
  line-height: 1.5;
  margin-bottom: 12px;
  background: #f8f9fa;
  padding: 8px;
  border-radius: 4px;
  border-left: 3px solid #28a745;
}

.meta-container {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 12px;
}

.action-buttons {
  margin-top: 10px;
}

.fas {
  width: 16px;
  text-align: center;
}

.empty-state {
  padding: 4rem 2rem;
  text-align: center;
  background: #f8f9fa;
  border-radius: 8px;
  border: 2px dashed #dee2e6;
}

.empty-state i {
  font-size: 3rem;
  color: #6c757d;
  margin-bottom: 1rem;
}

.add-blog-btn {
  position: fixed;
  bottom: 30px;
  right: 30px;
  z-index: 100;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.add-blog-btn:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 20px rgba(0,0,0,0.3);
  text-decoration: none;
}

.field-label {
  font-weight: 600;
  color: #495057;
  margin-right: 5px;
}

.pagination-container {
  margin-top: 30px;
  display: flex;
  justify-content: center;
}

.pagination {
  display: flex;
  list-style: none;
  padding: 0;
  margin: 0;
}

.page-item {
  margin: 0 2px;
}

.page-item.active .page-link {
  background-color: #007bff;
  color: white;
  border-color: #007bff;
}

.page-item.disabled .page-link {
  color: #6c757d;
  pointer-events: none;
  background-color: #f8f9fa;
}

.page-link {
  display: block;
  padding: 6px 12px;
  background-color: white;
  border: 1px solid #dee2e6;
  color: #007bff;
  text-decoration: none;
  border-radius: 4px;
}

.page-link:hover {
  background-color: #e9ecef;
}

.pagination-info {
  text-align: center;
  margin-top: 10px;
  color: #6c757d;
  font-size: 0.9rem;
}

/* Simple search box */
.search-box-simple {
  margin-bottom: 20px;
}

.blog-count-simple {
  background: #e9ecef;
  padding: 10px;
  border-radius: 5px;
  margin-bottom: 15px;
  font-size: 14px;
}

/* Responsive */
@media (max-width: 768px) {
  .col-6 {
    flex: 0 0 100%;
    max-width: 100%;
  }
  
  .card-img-top {
    height: 200px;
  }
}
</style>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex">
                <h4 class="page-title">All Blogs</h4>

                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page" style="margin-right: 30px;">Blogs</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <% if (blogs.length > 0) { %>
        <div class="blog-count-simple">
            <i class="fas fa-newspaper"></i> 
            Showing <%= blogs.length %> of <%= totalBlogs %> blogs
            <% if (search) { %>
            | Search: "<%= search %>"
            <% } %>
        </div>
        <% } %>
        
        <div class="search-box-simple">
            <form method="GET" action="/blog/view-blog" class="form-inline">
                <div class="input-group w-100" style="gap: 10px;">
                    <input type="text" 
                           class="form-control" 
                           placeholder="Search blogs..." 
                           name="search" 
                           value="<%= search || '' %>"
                           style="flex: 1;">
                    <select class="form-control" name="status" style="flex: 0.4;">
                        <option value="">All Status</option>
                        <option value="Draft" <% if(status === 'Draft') { %>selected<% } %>>Draft</option>
                        <option value="Published" <% if(status === 'Published') { %>selected<% } %>>Published</option>
                        <option value="Archived" <% if(status === 'Archived') { %>selected<% } %>>Archived</option>
                    </select>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                        <% if (search || status) { %>
                        <a href="/blog/view-blog" class="btn btn-secondary ml-1">
                            <i class="fas fa-times"></i>
                        </a>
                        <% } %>
                    </div>
                </div>
            </form>
        </div>

        <div class="row">
            <% if (blogs.length === 0) { %>
            <div class="col-12 text-center py-5">
                <div class="empty-state">
                    <i class="fas fa-newspaper"></i>
                    <h5 class="mt-3">No blogs found</h5>
                    <p class="mb-0 text-muted">
                        <% if (search) { %>
                        No blogs found for "<%= search %>"
                        <% } else { %>
                        Create your first blog post
                        <% } %>
                    </p>
                    <a href="/blog/add-blog" class="btn btn-primary mt-3">
                        <i class="fas fa-plus mr-2"></i> Create Blog
                    </a>
                </div>
            </div>
            <% } %>

            <% blogs.forEach((blog) => { %>
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
                <div class="card h-100">
                    <!-- Author Image -->
                    <img class="card-img-top"
                         src="<%= blog.authorImage || 'https://via.placeholder.com/300x180/eee/ccc?text=No+Image' %>"
                         alt="<%= blog.name || 'Author' %>">

                    <div class="card-body">
                        <!-- Title -->
                        <h5 class="card-title">
                            <%= blog.title && blog.title.length > 40 
                                ? blog.title.substring(0, 40) + '...' 
                                : blog.title || 'Untitled Blog' %>
                        </h5>

                        <!-- Status and Category Badges -->
                        <div class="meta-container">
                            <span class="badge <%= blog.status === 'Published' ? 'badge-success' : 'badge-warning' %>">
                                <i class="fas fa-circle mr-1" style="font-size: 6px;"></i>
                                <%= blog.status || 'Draft' %>
                            </span>
                            
                            <% if (blog.category) { %>
                            <span class="badge badge-info">
                                <i class="fas fa-tag mr-1"></i>
                                <%= blog.category %>
                            </span>
                            <% } %>
                        </div>

                        <!-- Author Name -->
                        <p class="card-text">
                            <i class="fas fa-user text-primary mr-2"></i>
                            <span class="field-label">Author:</span> 
                            <%= blog.name || 'Unknown' %>
                        </p>

                        <!-- Date -->
                        <p class="card-text">
                            <i class="fas fa-calendar text-secondary mr-2"></i>
                            <span class="field-label">Date:</span> 
                            <%= blog.date || 'Not set' %>
                        </p>

                        <!-- Action Buttons -->
                        <div class="action-buttons">
                            <div class="btn-group btn-group-sm w-100" role="group">
                                <a href="/blog/view-blog/<%= blog.id %>"
                                   class="btn btn-outline-success"
                                   title="View Blog Details">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                
                                <a href="/blog/edit-blog/<%= blog.id %>"
                                   class="btn btn-outline-warning"
                                   title="Edit Blog">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                
                                <a href="/blog/delete-blog/<%= blog.id %>"
                                   class="btn btn-outline-danger"
                                   title="Delete Blog">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <% if (totalPages > 1) { %>
        <div class="pagination-container">
            <nav aria-label="Blogs pagination">
                <ul class="pagination">
                    <!-- Previous Button -->
                    <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="/blog/view-blog?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    <% } else { %>
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-chevron-left"></i>
                        </span>
                    </li>
                    <% } %>

                    <!-- Page Numbers -->
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <% if (i === currentPage) { %>
                        <li class="page-item active">
                            <span class="page-link"><%= i %></span>
                        </li>
                        <% } else { %>
                        <li class="page-item">
                            <a class="page-link" href="/blog/view-blog?page=<%= i %><%= search ? '&search=' + search : '' %>"><%= i %></a>
                        </li>
                        <% } %>
                    <% } %>

                    <!-- Next Button -->
                    <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="/blog/view-blog?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                    <% } else { %>
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-chevron-right"></i>
                        </span>
                    </li>
                    <% } %>
                </ul>
            </nav>
        </div>
        
        <div class="pagination-info">
            Page <%= currentPage %> of <%= totalPages %> | 
            Total Blogs: <%= totalBlogs %>
        </div>
        <% } %>
    </div>
</div>

<a href="/blog/add-blog" class="add-blog-btn btn btn-primary">
    <i class="fas fa-plus" style="font-size: 1.5rem;"></i>
</a>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<%- include('../footer') %>