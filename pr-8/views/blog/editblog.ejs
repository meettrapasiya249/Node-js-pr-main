<%- include('../header')%>

<style>
    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }
    
    .custom-file-label::after {
        content: "Browse";
    }
    
    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }
    
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    .card-body {
        padding: 30px;
    }
    
    .form-group {
        margin-bottom: 25px;
    }
    
    .control-label {
        font-weight: 600;
        color: #2d3436;
        padding-top: 10px;
    }
    
    .current-image {
        margin-top: 10px;
        border: 2px solid #dee2e6;
        border-radius: 8px;
        padding: 5px;
        max-width: 150px;
    }
    
    .warning-text {
        color: #dc3545;
        font-size: 0.85rem;
        font-weight: 600;
    }
</style>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Edit Blog</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/blog/view-blog">All Blogs</a></li>
                            <li class="breadcrumb-item"><a href="/blog/view-blog/<%=blog.id%>">View Blog</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Update Blog</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form class="form-horizontal" action="/blog/update-blog/<%=blog.id%>" enctype="multipart/form-data" method="post">
                        <div class="card-body">
                            
                            <!-- Author Name -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Author Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="name" value="<%=blog.name || ''%>" placeholder="Author name" required>
                                </div>
                            </div>

                            <!-- Title -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Title</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="title" value="<%=blog.title || ''%>" placeholder="Blog Title" required>
                                </div>
                            </div>

                            <!-- Category -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Category</label>
                                <div class="col-sm-9">
                                    <select class="form-control" name="category" required>
                                        <option value="">Select Category</option>
                                        <option value="Tech" <%= blog.category == 'Tech' ? 'selected' : '' %>>Tech</option>
                                        <option value="Coding" <%= blog.category == 'Coding' ? 'selected' : '' %>>Coding</option>
                                        <option value="Traveling" <%= blog.category == 'Traveling' ? 'selected' : '' %>>Traveling</option>
                                        <option value="Food & Drink" <%= blog.category == 'Food & Drink' ? 'selected' : '' %>>Food & Drink</option>
                                        <option value="Learning" <%= blog.category == 'Learning' ? 'selected' : '' %>>Learning</option>
                                        <option value="Business & Finance" <%= blog.category == 'Business & Finance' ? 'selected' : '' %>>Business & Finance</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Status -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Status</label>
                                <div class="col-sm-9">
                                    <select class="form-control" name="status" required>
                                        <option value="Draft" <%= blog.status == 'Draft' ? 'selected' : '' %>>Draft</option>
                                        <option value="Published" <%= blog.status == 'Published' ? 'selected' : '' %>>Published</option>
                                        <option value="Archived" <%= blog.status == 'Archived' ? 'selected' : '' %>>Archived</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Date (Fixed to show DD-MM-YYYY correctly) -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Date</label>
                                <div class="col-sm-9">
                                    <% 
                                    // Convert DD-MM-YYYY to YYYY-MM-DD for date input
                                    let dateValue = new Date().toISOString().split('T')[0];
                                    if (blog.date) {
                                        // If date is in DD-MM-YYYY format
                                        if (blog.date.match(/^\d{2}-\d{2}-\d{4}$/)) {
                                            const parts = blog.date.split('-');
                                            dateValue = `${parts[2]}-${parts[1]}-${parts[0]}`;
                                        } 
                                        // If date is already in YYYY-MM-DD format
                                        else if (blog.date.match(/^\d{4}-\d{2}-\d{2}$/)) {
                                            dateValue = blog.date;
                                        }
                                        // If it's a date object
                                        else {
                                            const dateObj = new Date(blog.date);
                                            if (!isNaN(dateObj)) {
                                                dateValue = dateObj.toISOString().split('T')[0];
                                            }
                                        }
                                    }
                                    %>
                                    <input type="date" class="form-control" name="date" value="<%= dateValue %>" required>
                                    <small class="form-text text-muted">
                                        Current date in display: <strong><%= blog.date || 'Not set' %></strong>
                                    </small>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Content</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" name="content" placeholder="Blog content" rows="8" required><%=blog.content || ''%></textarea>
                                </div>
                            </div>

                            <!-- Author Image -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Author Image</label>
                                <div class="col-md-9">
                                    <div class="custom-file mb-3">
                                        <input type="file" class="custom-file-input" name="authorImage" id="authorImage" accept="image/*">
                                        <label class="custom-file-label" for="authorImage">Choose new image...</label>
                                    </div>
                                    <p class="warning-text mb-2">
                                        <i class="fas fa-exclamation-triangle mr-1"></i>
                                        * Change image then choose new image *
                                    </p>
                                    
                                    <% if (blog.authorImage) { %>
                                    <div class="mt-3">
                                        <p class="mb-2"><strong>Current Image:</strong></p>
                                        <img src="<%=blog.authorImage%>" alt="Current author image" class="current-image">
                                    </div>
                                    <% } %>
                                </div>
                            </div>

                        </div>
                        
                        <!-- Submit Buttons -->
                        <div class="border-top">
                            <div class="card-body text-center">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="fas fa-save mr-2"></i> Update Blog
                                </button>
                                <a href="/blog/view-blog/<%=blog.id%>" class="btn btn-secondary btn-lg px-5 ml-2">
                                    <i class="fas fa-times mr-2"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for file input label -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Update file input label
        const fileInput = document.getElementById('authorImage');
        const fileLabel = document.querySelector('.custom-file-label');
        
        if (fileInput) {
            fileInput.addEventListener('change', function(e) {
                if (this.files && this.files[0]) {
                    fileLabel.textContent = this.files[0].name;
                } else {
                    fileLabel.textContent = 'Choose new image...';
                }
            });
        }
    });
</script>

<%- include('../footer')%>