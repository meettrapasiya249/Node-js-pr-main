<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart â€“ All Items</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            background: linear-gradient(145deg, #f0f5fd 0%, #f7faff 100%);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
            padding: 2rem 1.5rem;
            min-height: 100vh;
            color: #1d2b3f;
        }
        .cart-wrapper {
            max-width: 1200px;
            margin: 0 auto;
        }
        .cart-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
            background: rgba(255,255,255,0.85);
            backdrop-filter: blur(4px);
            border-radius: 60px;
            padding: 15px 30px;
            margin-bottom: 30px;
            border: 1px solid #ffffff;
            box-shadow: 0 8px 22px rgba(0,20,40,0.06);
        }
        .logo-area {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .logo-area i {
            font-size: 28px;
            color: #0d6efd;
            background: #e8f0fe;
            padding: 12px;
            border-radius: 50%;
        }
        .logo-area h1 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #142433;
        }
        .nav-links {
            display: flex;
            gap: 15px;
        }
        .nav-btn {
            padding: 10px 28px;
            border-radius: 40px;
            background: #fff;
            color: #2c3e50;
            text-decoration: none;
            font-weight: 600;
            border: 1px solid #dee4ec;
            transition: 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        .nav-btn:hover {
            background: #f2f5f9;
            border-color: #b3c2d1;
            color: #0d6efd;
            transform: translateY(-2px);
        }
        .nav-btn.primary {
            background: #0d6efd;
            color: white;
            border-color: #0d6efd;
        }
        .nav-btn.primary:hover {
            background: #0b5ed7;
        }
        .cart-card {
            background: rgba(255,255,255,0.9);
            backdrop-filter: blur(12px);
            border-radius: 56px;
            box-shadow: 0 30px 70px -20px rgba(0,40,100,0.3), 0 0 0 1px rgba(255,255,255,0.6) inset;
            padding: 2.5rem 2.8rem;
            border: 1px solid #ffffff;
        }
        h2 {
            display: flex;
            align-items: center;
            gap: 16px;
            font-size: 2.4rem;
            font-weight: 700;
            color: #0c1e32;
            margin-bottom: 2rem;
            padding-bottom: 1.2rem;
            border-bottom: 3px solid #dfe9fd;
        }
        h2 i {
            background: #0d6efd;
            color: white;
            padding: 14px;
            border-radius: 60px;
            font-size: 1.8rem;
            box-shadow: 0 10px 20px #0d6efd60;
        }
        .item-list {
            display: flex;
            flex-direction: column;
            gap: 18px;
            margin-bottom: 32px;
        }
        .cart-row {
            display: flex;
            align-items: center;
            gap: 24px;
            background: #ffffffd9;
            border-radius: 120px;
            padding: 18px 28px;
            border: 1px solid #e5efff;
            transition: all 0.2s ease;
            box-shadow: 0 6px 16px rgba(0,30,60,0.04);
        }
        .cart-row:hover {
            border-color: #a7c6ff;
            background: white;
            transform: translateY(-3px);
            box-shadow: 0 20px 30px -10px #0d6efd40;
        }
        .item-emoji {
            background: #eef4fe;
            width: 64px;
            height: 64px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            color: #0d6efd;
            border: 2px solid white;
            box-shadow: 0 4px 10px rgba(0,0,0,0.02);
        }
        .item-details {
            flex: 2;
        }
        .item-details h3 {
            font-size: 1.6rem;
            font-weight: 700;
            color: #14273e;
            margin-bottom: 6px;
        }
        .category-pills {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .pill {
            background: #eaf1fd;
            padding: 6px 18px;
            border-radius: 60px;
            font-size: 0.9rem;
            font-weight: 500;
            color: #1d3b5c;
            border: 1px solid #c7dafc;
        }
        .item-id {
            font-size: 0.8rem;
            color: #657f9e;
            margin-top: 5px;
            letter-spacing: 0.2px;
        }
        .item-price-stuff {
            display: flex;
            align-items: center;
            gap: 30px;
            margin-left: auto;
            flex-wrap: wrap;
            justify-content: flex-end;
        }
        .price-tag {
            font-size: 2rem;
            font-weight: 750;
            color: #003b77;
        }
        .price-tag small {
            font-size: 1.1rem;
            font-weight: 400;
            color: #56759b;
            margin-right: 4px;
        }
        .qty-chip {
            background: #dae6ff;
            padding: 10px 24px;
            border-radius: 60px;
            font-weight: 600;
            color: #0d4f9e;
            border: 1px solid #9bbdfc;
            font-size: 1.2rem;
        }
        .remove-btn {
            background: #ffeaea;
            border: 1px solid #ffb5b5;
            color: #ba2b2b;
            border-radius: 60px;
            padding: 12px 28px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: 0.15s;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 4px 12px #ffc6c6;
        }
        .remove-btn:hover {
            background: #ffd4d4;
            border-color: #ff8888;
            transform: scale(1.03);
        }
        .cart-summary {
            background: #e3edfe;
            border-radius: 80px;
            padding: 24px 38px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 25px;
            margin-top: 30px;
            border: 1px solid #b9d2ff;
        }
        .total-amount {
            font-size: 2.5rem;
            font-weight: 750;
            color: #022b50;
        }
        .total-amount span {
            font-size: 1.4rem;
            font-weight: 450;
            color: #2f557b;
            margin-right: 15px;
        }
        .action-group {
            display: flex;
            gap: 16px;
            flex-wrap: wrap;
        }
        .btn-solid, .btn-outline {
            padding: 15px 42px;
            border-radius: 60px;
            font-weight: 600;
            font-size: 1.2rem;
            border: none;
            cursor: pointer;
            transition: 0.15s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }
        .btn-solid {
            background: #0d6efd;
            color: white;
            border: 1px solid #0d6efd;
            box-shadow: 0 12px 24px -10px #0a4a90;
        }
        .btn-solid:hover {
            background: #0b5ed7;
            transform: translateY(-4px);
            box-shadow: 0 22px 30px -10px #0d6efd;
        }
        .btn-outline {
            background: white;
            color: #1b344d;
            border: 1px solid #b6cefd;
        }
        .btn-outline:hover {
            background: #f2f8ff;
            border-color: #0d6efd;
        }
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: #f2f9ff;
            border-radius: 90px;
            border: 2px dashed #aac3e6;
            margin: 20px 0;
        }
        .empty-state i {
            font-size: 5rem;
            color: #97b5dd;
            margin-bottom: 20px;
        }
        .empty-state p {
            font-size: 2rem;
            color: #264d79;
            font-weight: 500;
        }
        @media (max-width: 850px) {
            .cart-card { padding: 1.8rem; }
            .cart-row { flex-wrap: wrap; border-radius: 50px; }
            .item-price-stuff { margin-left: 0; width: 100%; justify-content: space-between; }
            .cart-header { flex-direction: column; text-align: center; }
        }
    </style>
</head>
<body>
    <div class="cart-wrapper">
        <div class="cart-header">
            <div class="logo-area">
                <i class="fas fa-store"></i>
                <h1>Your Cart</h1>
            </div>
            <div class="nav-links">
                <a href="/web" class="nav-btn"><i class="fas fa-arrow-left"></i> Continue Shopping</a>
                <a href="/admin/view-admin" class="nav-btn">Admin Panel</a>
            </div>
        </div>

        <div class="cart-card">
            <h2>
                <i class="fas fa-bag-shopping"></i> 
                All items Â· <span id="itemCount">0</span>
            </h2>

            <div id="cartItemsContainer" class="item-list"></div>

            <div id="cartFooter" class="cart-summary" style="display: none;">
                <div class="total-amount" id="grandTotal">
                    <span>Total:</span> â‚¹0.00
                </div>
                <div class="action-group">
                    <a href="/web" class="btn-outline"><i class="fas fa-arrow-left"></i> Shop</a>
                    <button id="checkoutBtn" class="btn-solid">Checkout <i class="fas fa-arrow-right"></i></button>
                </div>
            </div>

            <div id="emptyCartMessage" class="empty-state" style="display: none;">
                <i class="fas fa-cart-plus"></i>
                <p>Your cart feels lonely</p>
                <a href="/web" class="btn-solid" style="margin-top: 28px; display: inline-block;">âœ¨ Browse products</a>
            </div>
        </div>
    </div>

    <script>
        (function() {
            async function loadCart() {
                try {
                    // FIXED: Use /api/cart instead of /cart
                    const res = await fetch('/api/cart');
                    const data = await res.json();
                    const items = data.cart || [];
                    
                    const container = document.getElementById('cartItemsContainer');
                    const footer = document.getElementById('cartFooter');
                    const emptyMsg = document.getElementById('emptyCartMessage');
                    const totalSpan = document.getElementById('grandTotal');
                    const itemCountSpan = document.getElementById('itemCount');

                    if (!container) return;

                    if (itemCountSpan) {
                        itemCountSpan.textContent = items.length;
                    }

                    if (!items.length) {
                        if (emptyMsg) emptyMsg.style.display = 'block';
                        if (footer) footer.style.display = 'none';
                        if (container) container.innerHTML = '';
                        return;
                    }

                    if (emptyMsg) emptyMsg.style.display = 'none';
                    if (footer) footer.style.display = 'flex';

                    let totalCartValue = 0;
                    let itemsHtml = '';

                    items.forEach(item => {
                        const price = item.price || 0;
                        const qty = item.qty || 1;
                        const subtotal = price * qty;
                        totalCartValue += subtotal;

                        const cat = item.categoryName || 'â€”';
                        const sub = item.subcategoryName || 'â€”';
                        const extra = item.extracategoryName || 'â€”';
                        const productName = item.productName || 'Product';

                        itemsHtml += `
                            <div class="cart-row" data-product-id="${item.id}">
                                <div class="item-emoji">
                                    <i class="fas fa-shirt"></i>
                                </div>
                                <div class="item-details">
                                    <h3>${productName}</h3>
                                    <div class="category-pills">
                                        <span class="pill">${cat}</span>
                                        <span class="pill">${sub}</span>
                                        <span class="pill">${extra}</span>
                                    </div>
                                    <div class="item-id">ðŸ†” ${item.id}</div>
                                </div>
                                <div class="item-price-stuff">
                                    <div class="price-tag"><small>â‚¹</small>${price.toFixed(2)}</div>
                                    <div class="qty-chip"><i class="fas fa-times" style="opacity:0.7;"></i> ${qty}</div>
                                    <button class="remove-btn" data-remove-id="${item.id}"><i class="fas fa-trash-alt"></i> Remove</button>
                                </div>
                            </div>
                        `;
                    });

                    container.innerHTML = itemsHtml;
                    if (totalSpan) {
                        totalSpan.innerHTML = `<span>Total:</span> â‚¹${totalCartValue.toFixed(2)}`;
                    }

                    document.querySelectorAll('.remove-btn').forEach(btn => {
                        btn.addEventListener('click', async function(e) {
                            const idToRemove = this.dataset.removeId;
                            
                            try {
                                // FIXED: Use /api/cart/remove
                                await fetch('/api/cart/remove', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ id: idToRemove })
                                });
                                
                                showToast('Item removed');
                                loadCart();
                            } catch (err) {
                                console.error('Remove error:', err);
                                alert('Failed to remove item');
                            }
                        });
                    });

                } catch (err) {
                    console.error('Cart load error:', err);
                    document.getElementById('cartItemsContainer').innerHTML = 
                        '<div class="empty-state" style="padding:40px;"><i class="fas fa-exclamation-triangle"></i><p>Failed to load cart</p></div>';
                }
            }

            function showToast(text) {
                const toast = document.createElement('div');
                toast.innerText = text;
                toast.style.position = 'fixed';
                toast.style.bottom = '30px';
                toast.style.left = '50%';
                toast.style.transform = 'translateX(-50%)';
                toast.style.backgroundColor = '#1f2e48';
                toast.style.color = 'white';
                toast.style.padding = '12px 32px';
                toast.style.borderRadius = '60px';
                toast.style.fontWeight = '500';
                toast.style.boxShadow = '0 15px 35px rgba(0,0,0,0.2)';
                toast.style.zIndex = '9999';
                toast.style.border = '1px solid #ffffff40';
                document.body.appendChild(toast);
                setTimeout(() => toast.remove(), 2000);
            }

            document.getElementById('checkoutBtn')?.addEventListener('click', function() {
                const itemCount = document.getElementById('itemCount')?.textContent || '0';
                if (itemCount === '0') {
                    alert('Your cart is empty!');
                    return;
                }
                alert(`âœ¨ Checkout â€” you have ${itemCount} item(s) ready. (Demo - integrate payment)`);
            });

            loadCart();
        })();
    </script>
</body>
</html>