<%- include('../header') %>

<div class="page-wrapper">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <h4>Add SubCategory</h4>
                <a href="/subcategory/view-subcategory" class="btn btn-secondary btn-sm">
                    ‚Üê Back
                </a>
            </div>

            <div class="card-body">

                <% if (messages.error && messages.error.length > 0) { %>
                    <div class="alert alert-danger">
                        <%= messages.error[0] %>
                    </div>
                <% } %>

                <% if (messages.success && messages.success.length > 0) { %>
                    <div class="alert alert-success">
                        <%= messages.success[0] %>
                    </div>
                <% } %>

                <form action="/subcategory/add-subcategory" method="POST" enctype="multipart/form-data">
                    
                    <div class="form-group mb-3">
                        <label>SubCategory Name</label>
                        <input type="text" name="subcategoryName" 
                               placeholder="Enter SubCategory Name" 
                               class="form-control" required>
                    </div>

                    <div class="form-group mb-3">
                        <label>SubCategory Image</label>
                        <input type="file" name="profileImg" class="form-control">
                    </div>

                    <button type="submit" class="btn btn-success">
                        Save SubCategory
                    </button>

                </form>

            </div>
        </div>

    </div>
</div>

<%- include('../footer') %>