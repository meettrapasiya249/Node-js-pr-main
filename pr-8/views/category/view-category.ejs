<%- include('../header') %>

<style>
    :root {
        --bg-color: #f8fafc;
        --surface: #ffffff;
        --primary: #10b981;
        --primary-hover: #059669;
        --danger: #ef4444;
        --danger-light: #fee2e2;
        --info: #3b82f6;
        --info-light: #dbeafe;
        --text-main: #1e293b;
        --text-muted: #64748b;
        --border-color: #e2e8f0;
        --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
    }

    .page-wrapper {
        background: var(--bg-color);
        min-height: 100vh;
        padding: 40px 0;
        padding-right: 130px;
        font-family: 'Inter', system-ui, sans-serif;
    }

    .container-fluid {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .card {
        background: var(--surface);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        box-shadow: var(--shadow);
        overflow: hidden;
    }

    .card-header {
        padding: 24px 30px;
        background: var(--surface);
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }

    .card-header h4 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        color: var(--text-main);
        letter-spacing: -0.02em;
        position: relative;
    }

    .card-header h4::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 50px;
        height: 3px;
        background: var(--primary);
        border-radius: 4px;
    }

    /* Filter Section */
    .filter-section {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
        margin-left: 20px;
    }

    .filter-input {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 8px 15px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .filter-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
    }

    /* Table Styling */
    .table-responsive {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-bottom: 0;
    }

    .table thead th {
        background: #f7fbff;
        color: var(--text-muted);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        padding: 18px 24px;
        border: none;
        white-space: nowrap;
    }

    .table thead th:first-child {
        border-radius: 12px 0 0 0;
    }

    .table thead th:last-child {
        border-radius: 0 12px 0 0;
        text-align: center !important;
    }

    .table tbody tr {
        transition: all 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: #f8fbff;
    }

    .table td {
        padding: 18px 24px;
        vertical-align: middle;
        color: var(--text-main);
        border-bottom: 1px solid var(--border-color);
        font-size: 0.95rem;
    }

    .table td:last-child {
        text-align: center !important;
    }

    .table tbody tr:last-child td {
        border-bottom: none;
    }

    /* Category Image */
    .category-img-container {
        width: 50px;
        height: 50px;
        overflow: hidden;
        border-radius: 10px;
        border: 1px solid var(--border-color);
        background: #f8fafc;
    }

    .category-img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Button Styles */
    .btn-custom {
        padding: 8px 18px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.85rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-add {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-hover) 100%);
        color: #fff;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.25);
    }

    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(16, 185, 129, 0.35);
        color: #fff;
        text-decoration: none;
    }

    .btn-edit {
        background: var(--info-light);
        color: var(--info);
        border: 1px solid rgba(59, 130, 246, 0.1);
    }

    .btn-edit:hover {
        background: var(--info);
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        text-decoration: none;
    }

    .btn-delete {
        background: var(--danger-light);
        color: var(--danger);
        border: 1px solid rgba(239, 68, 68, 0.1);
    }

    .btn-delete:hover {
        background: var(--danger);
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        text-decoration: none;
    }

    /* Action Buttons Container */
    .action-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }

    /* Empty State */
    .no-data {
        padding: 60px 0;
        color: var(--text-muted);
        text-align: center;
        font-style: italic;
        font-size: 1rem;
        background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
    }

    /* Animation */
    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .table tbody tr {
        animation: slideIn 0.5s ease forwards;
    }

    /* Responsive */
    @media (max-width: 992px) {
        .page-wrapper {
            padding-right: 20px;
            padding-left: 20px;
        }

        .card-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .filter-section {
            margin-left: 0;
            width: 100%;
        }
    }

    @media (max-width: 768px) {
        .table td, 
        .table th {
            padding: 15px 20px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-custom {
            width: 100%;
            justify-content: center;
        }

        .filter-section {
            flex-direction: column;
            align-items: stretch;
        }

        .filter-input {
            width: 100% !important;
        }
    }

    .fas {
        font-size: 0.9rem;
    }
</style>

<div class="page-wrapper">
    <div class="container-fluid">

        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center gap-3 flex-wrap">
                    <h4>Category Management</h4>
                    <form action="/category/view-category" method="GET" class="filter-section">
                        <input type="text" name="search" value="<%= search %>" placeholder="Search name..."
                            class="filter-input" style="width: 200px;">

                        <input type="text" name="date" value="<%= date %>" placeholder="Date (M/D/YYYY)"
                            class="filter-input" style="width: 150px;">

                        <button type="submit" class="btn-custom btn-edit">
                            <i class="fas fa-filter"></i> Filter
                        </button>
                        <a href="/category/view-category" class="btn-custom btn-delete">
                            <i class="fas fa-times"></i> Clear
                        </a>
                    </form>
                </div>

                <a href="/category/add-category" class="btn-custom btn-add">
                    <i class="fas fa-plus"></i> Add Category
                </a>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th width="80">#</th>
                                <th>Category Name</th>
                                <th>Preview</th>
                                <th>Date Created</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (categories.length > 0) { %>
                                <% categories.forEach((cat, index)=> { %>
                                    <tr>
                                        <td class="text-muted">
                                            <%= index + 1 %>
                                        </td>
                                        <td style="font-weight: 600;">
                                            <i class="fas fa-tag" style="color: var(--primary); margin-right: 8px;"></i>
                                            <%= cat.categoryName %>
                                        </td>
                                        <td>
                                            <div class="category-img-container">
                                                <% if (cat.profileImg) { %>
                                                    <img src="/uploads/<%= cat.profileImg %>">
                                                <% } else { %>
                                                    <div style="display: flex; align-items: center; justify-content: center; height: 100%; color: var(--text-muted);">
                                                        <i class="fas fa-image"></i>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td style="color: var(--text-muted); font-size: 0.85rem;">
                                            <i class="far fa-calendar-alt" style="margin-right: 5px;"></i>
                                            <%= cat.date %>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="/category/edit-category/<%= cat._id %>" class="btn-custom btn-edit">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a href="/category/delete-category/<%= cat._id %>" class="btn-custom btn-delete"
                                                    onclick="return confirm('Are you sure you want to delete this category?')">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="no-data">
                                        <i class="fas fa-folder-open" style="font-size: 48px; color: var(--border-color); margin-bottom: 15px; display: block;"></i>
                                        No categories found in the database.
                                        <br>
                                        <a href="/category/add-category" class="btn-custom btn-add" style="margin-top: 15px; display: inline-flex;">
                                            <i class="fas fa-plus"></i> Add your first category
                                        </a>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const Toast = Swal.mixin({
        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true
    });

    <% if (messages.success && messages.success.length > 0) { %>
        Toast.fire({
            icon: 'success',
            title: '<%= messages.success[0] %>'
        });
    <% } %>

    <% if (messages.error && messages.error.length > 0) { %>
        Toast.fire({
            icon: 'error',
            title: '<%= messages.error[0] %>'
        });
    <% } %>
</script>

<%- include('../footer') %>