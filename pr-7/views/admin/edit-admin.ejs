<%- include('../header') %>

    <style>
        .page-wrapper{
            padding-right: 120px;
        }
    </style>

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">

                <h4>Edit Profile</h4>

                <% if (message) { %>
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <%= message %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>

                <% if (admin) { %>
                    <form action="/admin/edit-profile/<%= admin._id %>" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <label>User Name</label>
                            <input type="text" name="adminName" class="form-control" value="<%= admin.adminName %>" required>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" class="form-control" value="<%= admin.email %>" required>
                        </div>

                        <div class="form-group">
                            <label>Mobile</label>
                            <input type="text" name="mobile" class="form-control" value="<%= admin.mobile %>" required>
                        </div>

                        <div class="form-group">
                            <label>Gender</label>
                            <select name="gender" class="form-control" required>
                                <option value="">Select</option>
                                <option value="Male" <%= admin.gender === 'Male' ? 'selected' : '' %>>Male</option>
                                <option value="Female" <%= admin.gender === 'Female' ? 'selected' : '' %>>Female</option>
                                <option value="Other" <%= admin.gender === 'Other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Password (Leave blank to keep current password)</label>
                            <input type="password" name="adminPassword" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Profile Image</label>
                            <% if (admin.profileImg) { %>
                                <div class="mb-2">
                                    <img src="/uploads/<%= admin.profileImg %>" alt="Profile" style="max-width: 150px; height: auto; border-radius: 8px;">
                                </div>
                            <% } %>
                            <input type="file" name="profileImg" class="form-control" accept="image/*">
                            <small class="text-muted">Upload new image to change</small>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Update Profile
                        </button>
                        
                        <a href="/admin/view-admin" class="btn btn-secondary">
                            Cancel
                        </a>
                    </form>
                <% } else { %>
                    <div class="alert alert-warning">
                        Unable to load profile. Please try again.
                    </div>
                <% } %>

            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
